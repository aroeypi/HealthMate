<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <View
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/next_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/left_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/title_view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title_view"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/emargency_background1"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_white"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/emargency_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="긴급 구조 요청"
                android:textColor="#424144"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/pretendard_bold"
                app:layout_constraintTop_toTopOf="@+id/emargency_background1"
                app:layout_constraintLeft_toLeftOf="@+id/emargency_background1"
                app:layout_constraintRight_toRightOf="@+id/emargency_background1"/>

            <ImageView
                android:id="@+id/blue_background1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/blue_background"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/emargency_title1"
                app:layout_constraintLeft_toLeftOf="@+id/emargency_background1"
                app:layout_constraintRight_toRightOf="@+id/emargency_background1"/>

            <TextView
                android:id="@+id/blue_background1_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보호자(어머니)"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:fontFamily="@font/pretendard_light"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="@+id/blue_background1"
                app:layout_constraintLeft_toLeftOf="@+id/blue_background1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+82 -10 -2391 -3427"
                android:textColor="@color/white"
                android:textSize="32dp"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/blue_background1_text1"
                app:layout_constraintLeft_toLeftOf="@+id/blue_background1"/>
            <ImageView
                android:id="@+id/blue_background2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/blue_background"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/blue_background1"
                app:layout_constraintLeft_toLeftOf="@+id/emargency_background1"
                app:layout_constraintRight_toRightOf="@+id/emargency_background1"/>

            <TextView
                android:id="@+id/blue_background2_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경찰서"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:fontFamily="@font/pretendard_light"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="@+id/blue_background2"
                app:layout_constraintLeft_toLeftOf="@+id/blue_background2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="112"
                android:textColor="@color/white"
                android:textSize="32dp"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/blue_background2_text2"
                app:layout_constraintLeft_toLeftOf="@+id/blue_background2"/>

            <ImageView
                android:id="@+id/blue_background3"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/blue_background"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintTop_toBottomOf="@+id/blue_background2"
                app:layout_constraintLeft_toLeftOf="@+id/emargency_background1"
                app:layout_constraintRight_toRightOf="@+id/emargency_background1"/>

            <TextView
                android:id="@+id/blue_background3_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화재, 긴급 , 구급차"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:fontFamily="@font/pretendard_light"
                android:layout_margin="10dp"
                app:layout_constraintTop_toTopOf="@+id/blue_background3"
                app:layout_constraintLeft_toLeftOf="@+id/blue_background3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="119"
                android:textColor="@color/white"
                android:textSize="32dp"
                android:fontFamily="@font/pretendard_bold"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@+id/blue_background3_text3"
                app:layout_constraintLeft_toLeftOf="@+id/blue_background3"/>

            <ImageView
                android:id="@+id/emargency_background2"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_white"
                app:layout_constraintTop_toBottomOf="@+id/emargency_background1"/>

            <ImageView
                android:id="@+id/doctor_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/doctor"
                android:layout_margin="20dp"
                app:layout_constraintLeft_toLeftOf="@+id/emargency_background2"
                app:layout_constraintTop_toTopOf="@+id/emargency_background2"/>
            <TextView
                android:id="@+id/doctor_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의료정보"
                android:textSize="14dp"
                android:textColor="#424144"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/pretendard_bold"
                app:layout_constraintTop_toTopOf="@+id/doctor_icon"
                app:layout_constraintBottom_toBottomOf="@+id/doctor_icon"
                app:layout_constraintLeft_toRightOf="@+id/doctor_icon"/>

            <TextView
                android:id="@+id/doctor_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="10dp"
                android:textColor="#bababa"
                android:fontFamily="@font/pretendard_light"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/doctor_text1"
                app:layout_constraintLeft_toLeftOf="@+id/doctor_text1"/>

            <TextView
                android:id="@+id/doctor_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="박영민"
                android:textColor="#424144"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="@+id/doctor_text2"
                app:layout_constraintTop_toBottomOf="@+id/doctor_text2" />
            <View
                android:id="@+id/doctor_line1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#b0b0b0"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/doctor_text3"
                app:layout_constraintLeft_toLeftOf="@+id/emargency_background2"
                app:layout_constraintRight_toRightOf="@+id/emargency_background2"/>

            <TextView
                android:id="@+id/doctor_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혈액형"
                android:textSize="10dp"
                android:textColor="#bababa"
                android:fontFamily="@font/pretendard_light"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/doctor_line1"
                app:layout_constraintLeft_toLeftOf="@+id/doctor_text1"/>

            <TextView
                android:id="@+id/doctor_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="B+"
                android:textColor="#424144"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="@+id/doctor_text2"
                app:layout_constraintTop_toBottomOf="@+id/doctor_text4" />
            <View
                android:id="@+id/doctor_line2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#b0b0b0"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/doctor_text5"
                app:layout_constraintLeft_toLeftOf="@+id/emargency_background2"
                app:layout_constraintRight_toRightOf="@+id/emargency_background2"/>
            <TextView
                android:id="@+id/doctor_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="체중"
                android:textSize="10dp"
                android:textColor="#bababa"
                android:fontFamily="@font/pretendard_light"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/doctor_line2"
                app:layout_constraintLeft_toLeftOf="@+id/doctor_text1"/>

            <TextView
                android:id="@+id/doctor_text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="46kg"
                android:textColor="#424144"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="@+id/doctor_text6"
                app:layout_constraintTop_toBottomOf="@+id/doctor_text6" />
            <View
                android:id="@+id/doctor_line3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#b0b0b0"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/doctor_text7"
                app:layout_constraintLeft_toLeftOf="@+id/emargency_background2"
                app:layout_constraintRight_toRightOf="@+id/emargency_background2"/>

            <TextView
                android:id="@+id/doctor_text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="신장"
                android:textSize="10dp"
                android:textColor="#bababa"
                android:fontFamily="@font/pretendard_light"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/doctor_line3"
                app:layout_constraintLeft_toLeftOf="@+id/doctor_text1"/>

            <TextView
                android:id="@+id/doctor_text10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="157cm"
                android:textColor="#424144"
                android:textSize="14dp"
                app:layout_constraintLeft_toLeftOf="@+id/doctor_text9"
                app:layout_constraintTop_toBottomOf="@+id/doctor_text9" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toBottomOf="@+id/emargency_background2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>